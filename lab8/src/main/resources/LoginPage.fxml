<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="231.0" prefWidth="400.0" style="-fx-background-color: #F2DDC6;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.gui.Controller">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                  <Text fx:id="login_login_text" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
                  <TextField fx:id="login_login_field" />
                  <Text fx:id="login_password_text" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
                  <PasswordField fx:id="login_password_field" />
                  <Button fx:id="login_login_button" mnemonicParsing="false" text="Button" />
                  <Button fx:id="login_register_button" mnemonicParsing="false" text="Button" />
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </center>
         <top>
            <VBox prefHeight="50.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Text fx:id="login_info_text" strokeType="OUTSIDE" strokeWidth="0.0" text="Text">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Text>
                  <MenuButton fx:id="login_language" mnemonicParsing="false" text="Язык">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Action 1" />
                      <MenuItem mnemonicParsing="false" text="Action 2" />
                    </items>
                  </MenuButton>
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </top>
      </BorderPane>
   </children>
</StackPane>
